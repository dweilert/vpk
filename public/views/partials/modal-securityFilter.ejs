<!-- Security filter Modal section       -->
<!-- ==================================== -->
<div class="modal fade" id="securityFilterModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="ml-2 vkpfont-lg vpkcolor">
                    Security filter -
                    <span class="ml-2 vpkfont vpkcolor">for selected namespace: <span id="oRefSelectedNS"
                            style="font-weight: bold;">none</span></span>
                    <!-- <span>Select kind(s) and or resourece names to filter view.</span> -->
                </div>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div>




                    <button type="button" class="btn btn-sm btn-primary ml-2" onclick="applySecurityFilter()">Apply
                        filter
                    </button>

                    <span class="header-right">
                        <button type="button" class="btn btn-sm btn-primary ml-2" onclick="clearSecurityFilters()">Clear
                            all filters
                        </button>
                    </span>
                    <hr>


                    <div class="vpkfont vpkcolor">
                        <div class="vpkfont vpkcolor mb-3 ml-1">
                            <span>Select Resource type to filter by:</span>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="filterSecurityTopic"
                                id="filterSecuritySubject">
                            <label class="form-check-label" for="filterSecuritySubject">
                                Subject
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="filterSecurityTopic"
                                id="filterSecurityBinding" checked>
                            <label class="form-check-label" for="filterSecurityBinding">
                                RoleBinding or ClusterRoleBinding
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="filterSecurityTopic"
                                id="filterSecurityRole" checked>
                            <label class="form-check-label" for="filterSecurityRole">
                                Role or ClusterRole
                            </label>
                        </div>

                        <div class="mt-1">
                            <button type="button" class="btn btn-sm btn-primary ml-2"
                                onclick="checkSelectedCategory()">Populate resource names information
                            </button>
                        </div>
                    </div>

                    <hr>

                    <div class="vpkfont vpkcolor ml-2 ">
                        Resource names information:
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <!-- Security filter names table-->
                            <div id="securityResults" class="ml-2 mr-2 mt-1">
                                <table id="tableSecurity" class="table table-bordered table-sm"
                                    data-buttons-class="primary" data-buttons-prefix="btn-sm btn" data-icon-size="sm"
                                    data-loading-template="loadingTemplate" data-maintain-meta-data="true"
                                    data-page-list="[10, 25, 50, 100, 200, All]" data-pagination="true"
                                    data-pagination-v-align="both" data-search="true" data-search-highlight="true"
                                    data-show-columns="false" data-show-export="false" data-show-fullscreen="false"
                                    data-show-print="false" data-show-refresh="false" data-show-toggle="false"
                                    data-sort-class="table-active" data-sortable="true" data-trim-on-search="false"
                                    data-toggle="table" data-visible="true" data-click-to-select="true">
                                    <thead class='thead-light'>
                                        <tr>
                                            <th data-field="state" data-checkbox="true"></th>
                                            <th data-field="name" data-sortable="true">Name</th>
                                            <th data-field="kind" data-sortable="true">Kind</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer mt-0 pt-1">
                </div>
            </div>
        </div>
    </div>
</div><!-- End of security filter Modal -->