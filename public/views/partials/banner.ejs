<div id="header-bar" class="header ml-1 mr-0 pt-1 pb-1">
    <!-- <span onclick="printDiv()"> -->
    <span>
        <img class="vpk-vert-mid" src='images/vpk.png' alt="vpk icon" width='30' height='30'
            onclick="getDocumentation('toc')">

        <div class="vpkcolor vpkfont pl-1 vpkinline vpk-vert-mid" onclick="getDocumentation('toc')">
            <span class="vpkfont-lg">V</span><span class="vpkfont">isually </span>
            <span class="vpkfont">presented</span>
            <span class="vpkfont-lg">K</span><span class="vpkfont">ubernetes</span>
        </div>

        <div id="datasource" class="header vpkfont-md ml-3 vpk-hdr-mid vpkinline">
            <div id="runLocal" style="display: inline;">
                <select id="pickDataSource" class="vpkfont-md pl-3 vpk-hdr-mid">
                    <option></option>
                    <option>Running cluster</option>
                    <option>Previous captured snapshot</option>
                </select>
            </div>
            <div id="runContainer" style="display: inline;">
                <select id="pickDataSource2" class="vpkfont-md pl-3 vpk-hdr-mid">
                    <option></option>
                    <option>Running cluster</option>
                    <option>Previous captured snapshot</option>
                    <option>Run command in container</option>
                </select>
            </div>

            <button class="btn btn-sm btn-outline-primary vpkfont-md ml-2" onclick="dirStats()">
                <span id="baseDir" class="float-left"></span>
            </button>
        </div>

        <div class="header-right">
            <!-- <button id="theme-toggle">Toggle Theme</button> -->

            <a href="javascript:getDocumentation()">
                <i class="fas fa-question mr-3 vpkcolor"></i>
            </a>
            <a href="javascript:showConfig()">
                <i class="fas fa-cog fa-lg mr-3 vpkcolor"></i>
            </a>
            <a href="javascript:closeVpK()">
                <i class="fas fa-window-close fa-lg mr-3 vpkcolor"></i>
            </a>
        </div>

        <div id="messageDiv" class="collapse hide mt-0 mb-0 vpkfont-md">
            <div id="messageType" class="alert alert-warning fade show pt-2 pb-2" role="alert">
                <span id="messageText"></span>
                <button type="button" class="close pt-0" onclick="hideMessage2()">
                    <span>&times;</span>
                </button>
            </div>
        </div>
    </span>
</div>